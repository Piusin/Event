<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cardviewstyles"
    android:layout_height="200dp"
    android:background="#FFFFFF"
    android:layout_margin="4dp"
    android:id="@+id/cardview_store"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/featuredstore_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/featuredstore_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="28sp" />

        </FrameLayout>


        <TextView
            android:id="@+id/featuredstore_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="3dp"
             />

        <TextView
            android:id="@+id/featuredstore_opentime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/featuredstore_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>