<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_featuredstoreproducts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="3dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:id="@+id/prodDescImage"
            android:src="@drawable/macbook"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_margin="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/productdesName"
                    android:textSize="20sp"
                    android:textColor="#900C3F"
                    android:text="Carrots"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/productdesCost"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FF5733"
                    android:text="Ksh 10.0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/productdesStore"
                    android:textSize="20sp"
                    android:textColor="#900C3F"
                    android:text="Nakumatt"/>
            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_margin="0dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Buy Now"
                android:background="@color/buttons"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:id="@+id/btnBuyProduct"
                style="?android:attr/buttonBarStyle"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/button1"
                android:text="Nearest Mall"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:id="@+id/btnNearestmall"
                style="?android:attr/buttonBarStyle"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Add To Basket"
                android:id="@+id/btnaddToBasket"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@color/button"
                style="?android:attr/buttonBarStyle"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:id="@+id/productDescription"
            android:text="Description"/>


    </LinearLayout>


</android.support.v7.widget.CardView>

</RelativeLayout>