<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_dess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:id="@+id/desImage"
                android:src="@drawable/macbook"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:padding="5dp"
                android:layout_margin="8dp"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/desName"
                        android:textSize="20sp"
                        android:textColor="#900C3F"
                        android:text="Canon Camera"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/desCost"
                        android:textColor="#900C3F"
                        android:textSize="20sp"
                        android:text="Ksh 90.0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/desStore"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#900C3F"
                    android:text="Nakumatt Store Bungoma"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/whatsnew_des"
                    android:text="Descriptions"/>

                </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Buy Now"
                android:background="#003300"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:id="@+id/btnNewB"
               />

            </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>